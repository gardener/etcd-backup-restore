etcd-backup-restore:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        dockerimages:
          etcdbrctl:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/etcdbrctl'
            dockerfile: 'build/Dockerfile'
            inputs:
              repos:
                source: ~
              steps:
                build: ~
    steps:
      check:
        image: 'golang:1.14'
      unit_test:
        image: 'golang:1.14'
      integration_test:
        image: 'eu.gcr.io/gardener-project/cc/job-image-golang:0.11.0'
      build:
        image: 'golang:1.14'
        output_dir: 'binary'

  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
      steps:
        tm_test:
          trait_depends:
          - publish
          image: eu.gcr.io/gardener-project/gardener/testmachinery/testmachinery-run:stable
          execute:
          - tm-tests-playground
          - --flavor-tm-chart=etcd
          - --landscape=playground
          - --tm-landscape=external
          - --
          - --testrun-prefix=playground
          - --set=projectNamespace=garden-it
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
        slack:
          default_channel: 'internal_scp_workspace'
          channel_cfgs:
            internal_scp_workspace:
              channel_name: 'C0177NLL8V9' # gardener-etcd
              slack_cfg_name: 'scp_workspace'
        component_descriptor: ~
      steps:
        tm_test:
          trait_depends:
          - publish
          image: eu.gcr.io/gardener-project/gardener/testmachinery/testmachinery-run:stable
          execute:
          - tm-tests-playground
          - --flavor-tm-chart=etcd
          - --landscape=playground
          - --tm-landscape=external
          - --
          - --testrun-prefix=playground
          - --set=projectNamespace=garden-it
